{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}",
          "restapi/**"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Shifts Logger",
      "_appTitle": "Shifts Logger",
      "_appLogoPath": "images/shifts_logger_logo.png",
      "_appFaviconPath": "images/favicon.ico",
      "_enableSearch": true,
      "pdf": true
    }
  }
}